@model Sneaker.Models.DonDatHang

@{
    ViewBag.Title = "SuaDDH";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<br />
<br />
<h2 style="text-align:center;font-weight:bold">Điều chỉnh thông tin đơn đặt hàng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaDonHang)
        <div class="form-group">
            <div class="row" style="width:100%">
                <div class="col-md-7">
                    <h5 style="font-weight:bold;padding-left:120px;padding-bottom:5px">Mã đơn hàng:</h5>
                    <div class="col-md-6" style="padding-left:120px">
                        @Model.MaDonHang
                    </div>
                </div>
                <div class="col-md-5">
                    <h5 style="font-weight:bold;padding-left:30px;padding-bottom:5px">Tên khách hàng:</h5>
                    <div class="col-md-4" style="padding-left: 30px">
                        @Model.KhachHang.HoTen
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row" style="width:100%">
                <div class="col-md-7">
                    <h5 style="font-weight:bold;padding-left:120px;padding-bottom:5px">Ngày đặt:</h5>
                    <div style="padding-left: 120px">
                        @Model.NgayDat
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row" style="width:100%">
                <div class="col-md-7">
                    <a style="font-weight:bold;color:black;padding-left:120px" href="@Url.Action("DonDatHang","Admin")"><i class="fa fa-arrow-left"> Trở lại</i></a>
                </div>
                <div class="col-md-5">
                    <div class="col-md-offset-2 col-md-10" style="padding-left: 30px">
                        <button style="font-weight: bold; color: black " type="submit"><i class="fa fa-save"> Lưu</i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


