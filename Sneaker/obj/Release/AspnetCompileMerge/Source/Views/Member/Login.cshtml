
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<table align="center" border="2" cellpadding="5">
    <tr align="center" , style="height:50px">
        <th colspan="2">ĐĂNG NHẬP</th>
    </tr>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:60px">
            <td>Tên đăng nhập: </td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["loi1"]
            </td>

        </tr>
        <tr style="height:60px">
            <td>Mật khẩu:</td>
            <td>
                @Html.Password("MatKhau")
                @ViewData["loi2"]
            </td>
        </tr>
        <tr align="center" style="height:50px">
            <th colspan="2">
                <button type="submit" class="btn btn-primary btn-sm" style="padding: 10px 20px; font-size: 14px;">
                    Đăng nhập
                </button>
                <fb:login-button scope="public_profile,email"
                                 onlogin="checkLoginState();">
                </fb:login-button>
            </th>
        </tr>
    }
</table>
<div style="text-align:center;padding-top:5px;padding-bottom:5px"><a href="@Url.Action("Register","Member")"><i class="fa fa-user-plus"> Chưa có tài khoản? Hãy đăng ký.</i></a></div>
<h4 style="color:red; text-align:center; font-size:12px; font-weight:700; padding-top:5px;padding-bottom:5px">@ViewBag.Thongbao</h4>

