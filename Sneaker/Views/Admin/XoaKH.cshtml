@model Sneaker.Models.KhachHang

@{
    ViewBag.Title = "XoaKH";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<br />
<br />
<h2 style="text-align:center;font-weight:bold">Xóa khách hàng</h2>

<div style="padding-left:70px">
    <dl class="dl-horizontal">
        <dt>
            Họ tên:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoTen)
        </dd>

        <dt>
            Tài khoản:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TaiKhoan)
        </dd>

        <dt>
            Mật khẩu:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MatKhau)
        </dd>

        <dt>
            Email:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Địa chỉ:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChiKH)
        </dd>

        <dt>
            Điện thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DienThoaiKH)
        </dd>

    </dl>
</div>
<div style="padding-left:70px">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button style="font-weight: bold; color: black " type="submit"><i class="fa fa-trash"> Xóa</i></button>
            <a style="font-weight:bold;color:black;padding-left:120px" href="@Url.Action("KhachHang","Admin")"><i class="fa fa-arrow-left"> Trở lại</i></a>
        </div>
    }
</div>

